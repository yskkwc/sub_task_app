<section class="user_info">
      <h1>
        <%= image_tag @user.image.thumb_big.url %><br/>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <% if @user == current_user %>
      <%= link_to "登録内容を編集/削除する", edit_user_registration_path %>
    <% end %>
