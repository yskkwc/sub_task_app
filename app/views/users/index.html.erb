<% provide(:title, "index") %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <%= render 'users/shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= link_to '全てのユーザーをみる', index_all_users_path, class:'link' %>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="col-md-6">
    <%= render 'shared/search_form' %>
    <h3>最新の投稿内容</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
