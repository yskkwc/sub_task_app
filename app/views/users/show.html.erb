<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-6">
    <%= render 'users/shared/show_info' %>
    <%= render 'users/shared/follow_form' %>
    <%= link_to "ホームへ戻る", users_path, class: 'link' %>
  </aside>
  <div class="col-md-6">
    <% if @user.microposts.any? %>
      <h3><%= @user.name %>さんの投稿内容(<%= @user.microposts.count %>)</h3>
        <%= will_paginate @microposts %>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
