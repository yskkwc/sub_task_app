<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
        <%= image_tag @user.image.thumb_big.url %><br/>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @user = current_user %>
        <%= link_to "登録内容を編集/削除する", edit_user_registration_path %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-6">
    <%= render 'users/shared/follow_form' if user_signed_in? %>
    <% if @user.microposts.any? %>
      <h3><%= @user.username %>さんの投稿内容(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
