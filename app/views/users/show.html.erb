<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
    <% if @user = current_user %>
      <%= link_to "登録内容を編集/削除する", edit_user_registration_path %>
    <% end %>
    </section>
  </aside>
  <div class="col-md-8">
  </div>
</div>
