<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-5">
    <%= render 'users/shared/show_info' %>
    <%= render 'users/shared/follow_form' %>
    <ol class='microposts'><%= render 'shared/like_info' %></ol>
  </aside>
  <div class="col-md-7">
    <% if @user.microposts.any? %>
      <h3><%= @user.name %>さんの投稿内容(<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
