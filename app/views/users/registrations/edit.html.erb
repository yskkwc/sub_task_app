<% provide(:title, "Profile edit") %>
<div class="row">
  <div class="col-md-12">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      data: { confirm: "登録内容を編集します"},html: { method: :put }) do |f| %>
      <%= render "shared/error_messages", resource: resource, object: f.object %>
      <div class="field">
        <%= f.label :image, 'original iconを設定' %><br/>
        <%= f.file_field :image %>
      </div>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="actions">
        <%= f.submit "Change my profile" %>
      </div>
    <% end %></br>
    <%= link_to 'パスワードを変更する', edit_password_path, class: 'imp-link' %><br/>
    <%= link_to "アカウントを削除する！", registration_path(resource_name), data: { confirm: "アカウントを削除します。同時に全ての登録データ、関連付けが消去されます。よろしいですか？" }, method: :delete, class: 'imp-link' %><br/>
    <%= link_to "戻る", :back, class: 'link' %>
  </div>
</div>
